<Page x:Class="Scoop_Desktop.Pages.ScoopBucket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Scoop_Desktop.Pages"
      Title="ScoopBucket"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Loaded="Page_Loaded"
      Background="White"
      mc:Ignorable="d">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="2" Margin="0,0,0,5">
            <Button HorizontalAlignment="Right">Refresh</Button>
            <ComboBox Name="BucketListComboBox" Width="150" SelectionChanged="BucketListComboBox_SelectionChanged" />
        </Grid>
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="gray">
            <ListView Name="BucketAppListView" Grid.Row="1" />
        </Border>
    </Grid>
</Page>
