<Page x:Class="Scoop_Desktop.Pages.ScoopUpdate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Scoop_Desktop.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="ScoopUpdate"
      d:Background="White"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Initialized="Page_Initialized"
      mc:Ignorable="d">

    <Border Grid.Row="1"
            Margin="5"
            BorderBrush="Gray"
            BorderThickness="1">
        <Grid>
            <ListView Name="MyListView">
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridViewColumn Width="250" DisplayMemberBinding="{Binding Name}" Header="Name" />
                        <GridViewColumn Width="450" DisplayMemberBinding="{Binding Version}" Header="Version" />
                    </GridView>
                </ListView.View>
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Click="MenuItem_Click" Header="Update" />
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </Grid>
    </Border>
</Page>
